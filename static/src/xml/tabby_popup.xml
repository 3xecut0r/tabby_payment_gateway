<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="TabbyPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup">
                <h1>Tabby Payment</h1>
                <div class="input-field">
                    <label>Name:</label>
                    <input type="text" name="name" placeholder="John Doe"/>
                </div>
                <div class="footer">
                    <button type="button" t-on-click="confirm">Confirm</button>
                    <button type="button" t-on-click="cancel">Close</button>
                </div>
            </div>
        </div>
    </t>
</templates>
